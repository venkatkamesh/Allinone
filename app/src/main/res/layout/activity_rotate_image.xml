<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.venkatkamesh.allinone.RotateImage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animations"
        android:textSize="24dp"
        android:id="@+id/text_lol"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/rotate_fuck"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Blink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/abtn1" />

        <Button
            android:text="Flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abtn3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <Button
            android:text="Bounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abtn2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Grow Bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abtn4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/abtn7"
            android:layout_alignEnd="@+id/abtn7" />

        <Button
            android:text="Rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abtn5"
            android:layout_alignBaseline="@+id/abtn4"
            android:layout_alignBottom="@+id/abtn4"
            android:layout_alignLeft="@+id/abtn2"
            android:layout_alignStart="@+id/abtn2"
            android:layout_alignRight="@+id/abtn8"
            android:layout_alignEnd="@+id/abtn8" />

        <Button
            android:text="Sequential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abtn6"
            android:layout_alignBaseline="@+id/abtn5"
            android:layout_alignBottom="@+id/abtn5"
            android:layout_alignLeft="@+id/abtn3"
            android:layout_alignStart="@+id/abtn3" />

        <Button
            android:text="Zoom In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abtn9"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/abtn6"
            android:layout_alignStart="@+id/abtn6" />

        <Button
            android:text="Together"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abtn8"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/abtn2"
            android:layout_alignStart="@+id/abtn2" />

        <Button
            android:text="Slide Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/abtn7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
